# HashPay 配置文件

# Telegram Bot 配置
bot:
  token: "YOUR_BOT_TOKEN"  # 从 @BotFather 获取

# 数据库配置
database:
  type: sqlite  # sqlite | mysql
  sqlite:
    path: ./data/hashpay.db
  mysql:
    host: localhost
    port: 3306
    database: hashpay
    username: root
    password: ""

# 系统配置
system:
  currency: CNY        # 基础货币
  timeout: 1800       # 订单超时时间(秒)
  fast_confirm: true  # 快速确认模式
  rate_adjust: 0.00   # 汇率微调(百分比)

# API 服务配置
api:
  host: 0.0.0.0
  port: 8080
  cors: true
  rate_limit: 100  # 每分钟请求限制

